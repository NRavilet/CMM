<p id="notice"><%= notice %></p>

<div class="page-title">
  <div class="container">
   <h1>Clientes y Potenciales</h1>
 </div>

 <div id="main-wrapper" class="container">
  <div class="row">
    <div class="col-lg-3 col-md-6">
      <!-- <div class="col-md-12"> -->
      <div class="panel panel-white">
        <div class="panel-body">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Email</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Empresa</th>
                <th>Cargo</th>
                <th>Area</th>
                <th>Mercado</th>
                <th>Teléfono</th>
                <th>Modulos</th>
                <th>Status</th>
                <th>Tipo Email</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody class="table table-hover">
              <% @leads.each do |lead| %>
              <tr>
                <td scope="row"><%= lead.email %></td>
                <td scope="row"><%= lead.name %></td>
                <td scope="row"><%= lead.lastname %></td>
                <td scope="row"><%= lead.company %></td>
                <td scope="row"><%= lead.role %></td>
                <td scope="row"><%= lead.area %></td>
                <td scope="row"><%= lead.industry %></td>
                <td scope="row"><%= lead.phone %></td>
                <td scope="row"><%= lead.module %></td>
                <td scope="row"><%= lead.status %></td>
                <td scope="row"><%= lead.categories.name %></td>
                <td scope="row"><%= link_to 'Ver', lead %></td>
                <td scope="row"><%= link_to 'Editar', edit_lead_path(lead) %></td>
                <td scope="row"><%= link_to 'eliminar', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>

            </tbody>
          </table>
        </div>
      </div>
      <br>
      <button type="button" class="btn btn-success">
        <%= link_to 'Añadir nuevo', new_lead_path %></button>
      </div>
    </div>
  </div>
</div>
</div>



