<p id="notice"><%= notice %></p>

<h1>Listing Leads</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Lastname</th>
      <th>Company</th>
      <th>Role</th>
      <th>Area</th>
      <th>Industry</th>
      <th>Phone</th>
      <th>Module</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td><%= lead.email %></td>
        <td><%= lead.name %></td>
        <td><%= lead.lastname %></td>
        <td><%= lead.company %></td>
        <td><%= lead.role %></td>
        <td><%= lead.area %></td>
        <td><%= lead.industry %></td>
        <td><%= lead.phone %></td>
        <td><%= lead.module %></td>
        <td><%= lead.status %></td>
        <td><%= link_to 'Show', lead %></td>
        <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
        <td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

